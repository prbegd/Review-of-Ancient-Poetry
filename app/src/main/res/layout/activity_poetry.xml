<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".gui.PoetryActivity">
    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/poetry_toolbar_layout"
            android:theme="@style/toolbar_theme">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/poetry_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                tools:ignore="MissingConstraints"
                app:title="@string/nul"
                app:titleTextColor="@android:color/white"
                app:navigationIcon="@drawable/ic_angel_left"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/poetry_toolbar_layout"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/poetry_poetry_name"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:autoSizeMaxTextSize="28sp"
                    android:autoSizeMinTextSize="23sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="四时田园杂兴(其三十一)"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/poetry_poetry_author"
                    android:gravity="center"
                    android:autoSizeMaxTextSize="22sp"
                    android:autoSizeMinTextSize="17sp"
                    android:autoSizeTextType="uniform"
                    android:text="[宋]范成大"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/poetry_poetry_content"
                    android:layout_margin="15dp"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:id="@+id/poetry_paraphrase"
                    android:textIsSelectable="true"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:id="@+id/poetry_comment"
                    android:textIsSelectable="true"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:id="@+id/poetry_appreciation"
                    android:textIsSelectable="true"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>